#!/bin/bash
intltool-extract --type=gettext/glade usr/share/mintupgrade/mintupgrade.ui
intltool-extract --type=gettext/glade usr/share/mintupgrade/shortcuts.ui
xgettext --language=Python --keyword=_ --keyword=N_ --output=mintupgrade.pot usr/lib/mintupgrade/*.py generate_desktop_files usr/share/mintupgrade/mintupgrade.ui.h usr/share/mintupgrade/shortcuts.ui.h
rm -f usr/share/mintupgrade/*.ui.h
